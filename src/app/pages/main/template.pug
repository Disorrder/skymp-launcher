div#main.layout
    nav.navbar-nav(style="-webkit-app-region: no-drag")
        router-link.nav-item.nav-settings(:to=`{name: "settings"}`)
            i.fa.fa-bars
    
    header
    main.container.mt-4(style="-webkit-app-region: no-drag")
        .row.justify-content-center: .card.col-6: .card-body
            h3.text-center Авторизация
            form#auth.mt-4(@submit="play")
                .form-group
                    input#login.form-control(placeholder="Имя персонажа" v-model="authData.login")
                .form-group
                    .form-text.text-muted.text-center Пароль можно ввести в игре
                button.btn.btn-primary(type="submit" style="width: 100%;") Играть!
                .form-group(v-if="currentMessage.text")
                    small.form-text.text-muted.text-center {{currentMessage.text}}
                
    //- #debug(@click="debugData.extended = !debugData.extended")
        div: u Debug
        div cwd: {{debugData.dirname}}
        div version: {{version}}
        div(v-if="debugData.extended") Electron: {{versions.electron}}, Chromium: {{versions.chrome}}, Node: {{versions.node}}
